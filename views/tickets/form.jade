div.form-box-container
  div.form-box
    div.form-group
      label(for="author") Name
      input.form-control(type="text" id="name" name="name" value="#{ticket ? ticket.name : ''}" placeholder="Author")
    div.form-group
      label(for="title") Email
      input.form-control(type="text" id="title"  name="email" value="#{ticket ? ticket.email : ''}" placeholder="Title")
  div.form-box
    label Prioritize this ticket
      div.form-group
      each item, index in priorities
        - var i = index
        input(type="radio" name="priority" value=(i+1))
        label(for="priority")= (index+1)+ ' '+'('+item+')'
        br
          
      div.form-group
        label(for="issue") Issue:
        textarea.form-control(rows="5"  name="issue" id='issue') #{ticket ? ticket.issue : ''}
    br
    button.btn.btn-primary(type="submit") #{button_text}
