div.form-box-container
  div.form-box
    div.form-group
      label(for="author") Name
      input.form-control(type="text" id="name" name="name" value="#{ticket ? ticket.name : ''}" placeholder="Author")
    div.form-group
      label(for="title") Email
      input.form-control(type="text" id="title"  name="email" value="#{ticket ? ticket.email : ''}" placeholder="Title")
      div.form-group
        label Status
        p
          input(type="radio" name="is_open" value="true" checked)
          open Open
      div.form-group
        input(type="radio" name="is_open" value="false" checked=(ticket ? (ticket.is_open === false ? true : undefined): undefined))
        closed Closed
  div.form-box
    div.form-group
        label Prioritize this ticket
        p
          input(type="radio" name="priority" value="1" checked=(ticket ? (ticket.priority === 1 ? true : undefined): undefined))
          one 1 (Low Priority)
    div.form-group
      input(type="radio" name="priority" value="2" checked=(ticket ? (ticket.priority === 2 ? true : undefined): undefined))
      two 2
    div.form-group
      input(type="radio" name="priority" value="3" checked=(ticket ? (ticket.priority === 3 ? true : undefined): undefined))
      three 3
    div.form-group
      input(type="radio" name="priority" value="4" checked=(ticket ? (ticket.priority === 4 ? true : undefined): undefined))
      four 4 (Urgent)
    div.form-group
      label(for="issue") Issue:
      textarea.form-control(rows="5"  name="issue" id='issue') #{ticket ? ticket.issue : ''}
    button.btn.btn-primary(type="submit") #{button_text}
